<button hx-get="{{ url_for('displays.new') }}"
        hx-target="#app"
        hx-swap="innerHTML">
  Create New Display
</button>
<button hx-post="{{ url_for('displays.sync') }}"
        hx-target="#app"
        hx-swap="innerHTML">
  Sync
</button>
<form hx-post="{{ url_for('inputs.create') }}"
      hx-target="#app"
      hx-swap="innerHTML">
  <label>
    Code: <input type="text" name="code" required>
  </label>
  <label>
    <input type="radio" name="player" value="p1"/>
    p1
  </label>
  <label>
    <input type="radio" name="player" value="p2"/>
    p2
  </label>
  <button type="submit">Submit</button>
</form>
<div>
  <div>Top Score:</div>
  <div id="top_score"
       hx-get="{{ url_for('scores.top') }}"
       hx-trigger="load"
       hx-target="#top_score"
       hx-swap="innerHTML">
  </div>
  <button
      hx-delete="{{ url_for('scores.reset') }}"
      hx-target="#app"
      hx-swap="innerHTML">
    Reset
  </button>
</div>
<div>
  <label>
    Search: <input
      type="text"
      name="search"
      hx-get="{{ url_for('displays.index') }}"
      hx-target="#content"
      hx-swap="innerHTML"
      hx-trigger="input changed delay:500ms, keyup[key=='Enter']"
      hx-vals='{"search":{{ search }}, "page":{{ page }}, "size":{{ size }}}'
      hx-preserve="true">
  </label>
</div>
<div id="content" hx-get="/displays" hx-trigger="load" hx-swap="innerHTML">
  <!-- partials will be loaded here -->
</div>