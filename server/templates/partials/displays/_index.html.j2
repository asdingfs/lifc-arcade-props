<button hx-get="{{ url_for('displays.new') }}"
        hx-target="#app"
        hx-swap="innerHTML">
  Create New Display
</button>
<button hx-post="{{ url_for('displays.sync') }}"
        hx-target="#app"
        hx-swap="innerHTML">
  Sync
</button>
<form hx-post="{{ url_for('inputs.create') }}"
      hx-target="#app"
      hx-swap="innerHTML">
  <label>
    Code: <input type="text" name="code" required>
  </label>
  <label>
    <input type="radio" name="player" value="p1"/>
    p1
  </label>
  <label>
    <input type="radio" name="player" value="p2"/>
    p2
  </label>
  <button type="submit">Submit</button>
</form>
<div>
  <div>Top Score:</div>
  <div id="top_score"
       hx-get="{{ url_for('scores.top') }}"
       hx-trigger="load"
       hx-target="#top_score"
       hx-swap="innerHTML">
  </div>
  <button
      hx-delete="{{ url_for('scores.reset') }}"
      hx-target="#app"
      hx-swap="innerHTML">
    Reset
  </button>
</div>
<table>
  <thead>
  <tr>
    <th>ID</th>
    <th>P1 Name</th>
    <th>P1 Score</th>
    <th>P1 Image</th>
    <th>P2 Name</th>
    <th>P2 Score</th>
    <th>P2 Image</th>
    <th>Created At</th>
  </tr>
  </thead>
  <tbody>
  {% for record in records %}
    <tr>
      <td>{{ record.id }}</td>
      <td>{{ record.p1_name }}</td>
      <td>{{ record.p1_score }}</td>
      <td>
        {% if record.p1_img_src %}
          <img
              src="{{ record.p1_img_src }}"
              width="64"
              alt="player 1 image">
        {% endif %}
      </td>
      <td>{{ record.p2_name }}</td>
      <td>{{ record.p2_score }}</td>
      <td>
        {% if record.p2_img_src %}
          <img
              src="{{ record.p2_img_src }}"
              width="64"
              alt="player 2 image">
        {% endif %}
      </td>
      <td>{{ record.created_at }}</td>
      <td
          hx-get="{{ url_for('displays.edit', pkey=record.pkey) }}"
          hx-target="#app"
          hx-swap="innerHTML">
        Edit
      </td>
      <td hx-get="{{ url_for('displays.show', pkey=record.pkey) }}">
        Show
      </td>
      <td>
        <a href="{{ url_for('displays.download', pkey=record.pkey) }}" download>
          Download
        </a>
      </td>
      <td
          hx-delete="{{ url_for('displays.delete', pkey=record.pkey) }}"
          hx-target="#app"
          hx-swap="innerHTML">
        Delete
      </td>
    </tr>
  {% endfor %}
  </tbody>
</table>