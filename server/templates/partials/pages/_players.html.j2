<h1>PAGE: PLAYERS</h1>
<button hx-get="{{ url_for('badges.new') }}"
        hx-target="#app_body"
        hx-swap="innerHTML">
  Create New Player
</button>
<form hx-post="{{ url_for('inputs.create') }}"
      hx-target="#app_body"
      hx-swap="innerHTML">
  <label>
    Code: <input type="text" name="code" required>
  </label>
  <label>
    <input type="radio" name="player" value="p1"/>
    p1
  </label>
  <label>
    <input type="radio" name="player" value="p2"/>
    p2
  </label>
  <button type="submit">Submit</button>
</form>
<div>
  <label>
    Search: <input
      type="text"
      id="search"
      name="search"
      hx-get="{{ url_for('displays.index') }}"
      hx-target="#content"
      hx-swap="innerHTML"
      hx-trigger="input changed delay:500ms, keyup[key=='Enter']"
      hx-include="search"
      hx-preserve="true">
  </label>
</div>
<table>
  <thead>
  <tr>
    <th>ID</th>
    <th>P1 Name</th>
    <th>P1 Score</th>
    <th>P1 Image</th>
    <th>P2 Name</th>
    <th>P2 Score</th>
    <th>P2 Image</th>
    <th>Created At</th>
  </tr>
  </thead>
  <tbody
      id="content"
      hx-get="{{ url_for('displays.index') }}"
      hx-trigger="load"
      hx-target="#content"
      hx-swap="innerHTML">
  <!-- partials will replace this <tr> -->
  </tbody>
</table>
